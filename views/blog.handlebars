<div class="row mb-4 blog justify-center">
  <div class="col-12">
    <form id="blogForm" class="text-center edit-blog-form" data-id="{{id}}">
      <input 
              {{#if disable_edit}}
        disabled
          {{/if}}value="{{title}}" class="form-input" id="blog-name" />
      <textarea
        {{#if disable_edit}}
        disabled
          {{/if}}
        rows="10"
        class="form-input"
        id="blog-desc"
      >{{content}}</textarea>
      <div class="form-group">
        <button
        {{#if disable_edit}}
        disabled
        {{/if}}
         type="submit" class="btn btn-primary">Save Blog</button>
      </div>
      <p>Posted by {{user.name}} on {{format_date date_created}}</p>
    </form>
  </div>
</div>
<div class="row mb-4 blog justify-center">
  {{#if comments}}
    {{! header with comments }}
    {{#each comments as |comment|}}
      <div class="col-12 commentContent">
        <p>
          {{comment.commentContent}}
        </p>
        <p>Posted by {{comment.user.name}} on {{format_date date_created}}</p>
      </div>
    {{/each}}
  {{/if}}
</div>
<div class="col-12 commentEntry">
  <textarea rows="10" cols="50"></textarea>
  <div class="col">
    <button class="comment-btn col btn btn-sm btn-danger">ADD COMMENT</button>
  </div>
</div>
<script src="/js/editblog.js"></script>
<script src="/js/addcomment.js"></script>