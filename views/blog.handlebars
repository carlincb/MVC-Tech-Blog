<div class="row">
  <div class="col-12">
    <form id="blogForm" class="text-center edit-blog-form" data-id="{{id}}">
      <input value="{{title}}" class="form-input" id="blog-name" />
      <textarea class="form-input" id="blog-desc">{{content}}</textarea>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Blog</button>
      </div>
      <p>Posted by {{user.name}} on {{format_date date_created}}</p>
    </form>
  </div>
</div>
<div class="row">
  {{#if comments}}
    {{! header with comments }}
    {{#each comments as |comment|}}
      <div class="col-12">
        <p>
          {{comment.commentContent}}
        </p>
      </div>
    {{/each}}
  {{/if}}
</div>
<div class="col-md-6 justify-center blog-block">
  <textarea rows="5" cols="20"></textarea>
  <div class="col">
    <button class="comment-btn col">ADD COMMENT</button>
  </div>
</div>
<script src="/js/editblog.js"></script>
<script src="/js/addcomment.js"></script>